// for table scheme
$screed-border-color ?= rgba(35, 35, 35, .2)

@media screen

  .screed
    table
      background-color rgba(250, 250, 250, .85)

      position absolute
      display block
      width 100%
      top 2.5em
      right 0
      bottom 0
      left 0
      padding-bottom 5em
      overflow auto

      tfoot
        tr
          //position sticky :)
          box-shadow -1px 0 3px 1px $screed-border-color
      td
        &:focus
          background-color rgba(225, 225, 225, .95)

@media all

  .screed
    table
      font-family  sans-serif
      font-size    $screed-font-size
      font-style   normal
      font-weight  normal
      font-kerning none
      word-spacing 0

      td
        border solid 1px $screed-border-color
        background-color rgba(250, 250, 250, 1)

      .table-corner
      .table-column-title
      .table-row-title
        color rgba(35, 35, 35, .5)
        border solid 1px $screed-border-color


@media print

  .screed

    table
      margin-left  4 * $symbol-width
      page-break-after always

      td
        page-break-inside avoid
