@import "../common"

@media all

  main
    display block
    margin 0 auto
    max-width 640px
    box-sizing border-box
    padding 10px
    background-color rgba(250, 250, 250, .85)
    .intro
      margin 10px 10px 20px 10px
      font-family sans-serif
      font-size 120%
    .demo
      h2
        background-color $examples-bg-color
        box-sizing border-box
        padding 5px
        margin 20px 10px 15px 10px
        a
          display inline-block
          padding 5px 10px
          font-size 150%
          color rgba(250, 250, 250, .85)
          text-decoration none
      .description
        img
          display block
          max-width 600px
          margin 0 auto 10px auto
          box-shadow 3px 3px 13px $examples-bg-color
